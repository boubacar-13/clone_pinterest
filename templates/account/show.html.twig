{% extends 'layouts/base.html.twig' %}

{% block title 'Profile' %}
    

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <h1 class="mt-5">Profile</h1>

            <img src="{{app.user.getGravatarUrl()}}" alt="{{app.user.fullName}}'s Avatar" class="shadow rounded-circle">

            <p class="lead mt-3">{{app.user.email}}</p>
 
            <h2>{{app.user.fullName}}</h2>

            <p><small>Account created on {{app.user.createdAt|date('d/m/Y')}}</small></p>
            
            <p>
                <a href="{{path('app_account_edit')}}">Edit Account</a> | <a href="">Change Password</a>
            </p>
        </div>
    </div>
{% endblock %}
